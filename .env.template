# =========================
# App Environment
# =========================
NODE_ENV=production

# =========================
# Signaling Server
# =========================
HOST=0.0.0.0         # Listen on all interfaces
PORT=${PORT}         # Render provides PORT env dynamically

# =========================
# Logging
# =========================
LOGS_JSON=false
LOGS_JSON_PRETTY=false

# =========================
# Trust Proxy
# =========================
TRUST_PROXY=true     # Render runs behind proxy/load balancer

# =========================
# Time Zone
# =========================
TZ=UTC

# =========================
# CORS
# =========================
# Use '*' if multiple frontends will connect
# Otherwise restrict to your "fritney" frontend domain
CORS_ORIGIN='["https://your-frontend.com"]'
CORS_METHODS='["GET","POST"]'

# =========================
# STUN/TURN Servers
# =========================
STUN_SERVER_ENABLED=true
STUN_SERVER_URL=stun:stun.l.google.com:19302

TURN_SERVER_ENABLED=true
TURN_SERVER_URL=turn:a.relay.metered.ca:443
TURN_SERVER_USERNAME=e8dd65b92c62d3e36cafb807
TURN_SERVER_CREDENTIAL=uWdWNmkhvyqTEswO

# =========================
# API Key (backend auth)
# =========================
API_KEY_SECRET=mirotalkc2c_default_secret

# =========================
# Ngrok (disabled in production)
# =========================
NGROK_ENABLED=false
NGROK_AUTH_TOKEN=

# =========================
# Redirects (optional)
# =========================
SURVEY_URL=
REDIRECT_URL=

# =========================
# Email Alerts (optional)
# =========================
EMAIL_ALERT=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_SEND_TO=

# =========================
# OIDC Authentication (optional)
# =========================
OIDC_ENABLED=false
OIDC_BASE_URL_DYNAMIC=false
OIDC_ISSUER_BASE_URL=
OIDC_BASE_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
